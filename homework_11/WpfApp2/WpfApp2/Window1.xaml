<Window x:Class="WpfApp2.PromptUsernameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prompt Username" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Enter your username:"/>
        <TextBox x:Name="usernameTextBox" Grid.Row="1"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button x:Name="okButton" Content="OK" Click="okButton_Click"/>
            <Button x:Name="cancelButton" Content="Cancel" Click="cancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>